.faw-hero-home-hr {
  margin: 0 auto;
  width: 230px;
  @include breakpoint(md) {
    width: 230px;
  }
}

.form-hero{
    padding-left: 1em;
    padding-right: 1em;
    position: relative;
    z-index: 1;
    
    .btn-auto-size{
        width: 100%;
        @include breakpoint(md) {
            width: auto;
        }
    }
}

.form-hero.is-active {
  z-index: 100;
}


.form-hero-register {
  color: #040000;
  font-size: pxtoem(14px);
  padding: 0 0.5em;
  max-width: 480px;

  @include breakpoint(sm){
    font-size: pxtoem(18px);
    padding: 0 1.4em;
    margin: 0 auto;
  }

  @include breakpoint(md){
    max-width: 520px;
  }

}