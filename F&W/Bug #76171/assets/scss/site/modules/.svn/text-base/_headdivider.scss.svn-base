.head-divider {
    position: relative;
    width: 100%;
    //height: 3em;
    text-align: center;
    margin-top: $space-top-bottom-half;
    margin-bottom: $space-top-bottom-half;

    padding-left: 15px;
    padding-right: 15px;


     hr {
       display: block;
       float: none;
       position: relative;
       margin: 1em auto 1.4em;
       border-top: 1px solid #BBB;
       width: 50%;
    }



    
    @include breakpoint(md) {
       //margin-top: 3em;

      hr{
        position: relative;
        float: left;
        margin: 0.5em;
        width: 70px;
        border-top: 1px solid #bbbbbb;
      }

      h5, .head-divider-title {
        position: relative;
        float: left;
      }


    }



}


.head-divider + p{
  margin-top: 0;
  padding-top: 0;
}

.head-divider-inner{
    display: inline-block;
}
