/* Image uploader */

.image-uploader-container{
  margin:1em 0;
  position: relative;
  padding-top:0;
  z-index: 9;
}
.image-uploader-container:after{
  Content:"Upload";
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  left: 0;
  right: 0;
  line-height: 46px;
  z-index: -1;
  text-align: center;

}


.image-uploader-item{
  margin-bottom: 1em;
}


.image-uploader-control{
  width:180px;
  height:46px;
  opacity:0;
  cursor:pointer;
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";
  filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=0);
}

.image-uploader-label{
  display:none;
}

.image-uploader-filename{
  margin: 0 0 1em 0;
  display: block;
  font-size: 0.9em;
  line-height: 1.5em;
}

.image-uploader-item:first-child .image-uploader-remove{
  display: none;
}

.image-uploader-remove{
  float:right;
  margin-top: 1.8em;
}

.image-uploader-remove a{
  font-size: 0.9em;
  font-weight: normal;
}

.image-uploader-add-more{
  margin-top: 1em;
}
.image-uploader-add-more a{
  font-size: 0.9em;
  font-weight: normal;
}