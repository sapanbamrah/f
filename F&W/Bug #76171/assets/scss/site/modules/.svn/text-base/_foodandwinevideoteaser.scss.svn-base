.faw-video-teaser-wrapper{
   position: relative; 
   overflow: hidden;
 //  border-top: 3px rgba(0,0,0,0.6) solid;

    @include breakpoint(md) {
        border-top: 0px rgba(0,0,0,0.6) solid;
    }

  //Target the background image only
  > img {
    position: absolute;
  }

}

.faw-video-teaser{

    text-align: center;
    background: rgb(0, 0, 0); /* The Fallback */
    background-color: rgba(0,0,0,0.6);
    position: relative;
    left:0;
    bottom: 0;
    width: 100%;
    padding: 0 1em 1.8em;



    .is-desktop {
      display: none;
    }

    h5 {
      font-family: "ProximaNova Regular", Helvetica, Arial, sans-serif;
      text-transform: uppercase;
      font-size: pxtoem(14px);
    }

    @include breakpoint(md) {
      h5 {
        @include type_TAheadline();
        font-size: pxtoem(24px);
      }

       position: absolute;
       padding: 5em 3em 5em 3em;

      .is-mobile {
        display: none;
      }
      .is-desktop {
        display: inline-block;
      }
    }
}

.faw-video-teaser-with-bg{

    position: relative!important;
    background-color: transparent!important;
    padding: 1em 1em 1em 1em;
    @include breakpoint(md) {
       padding: 2em 3em 2em 3em;
    }
    
    margin-top: 3em;
    margin-bottom: 3em;
}

.faw-video-teaser-with-bg-wrapper{
    border-top: 0px rgba(0,0,0,0.6) solid!important;
    margin-top: 44px;
}

.faw-video-teaser-with-bg-wrapper .responsive-image img{
  max-width: none;
}

.faw-video-teaser-label{
    display: block;
    color: $color-white;
    padding-bottom: pxtoem(15px);
    margin-bottom: 2em;

    @include breakpoint(md) {
       margin-bottom: 0;
       display: inline-block;
    }
}
.faw-video-teaser-icon{

  padding: 2.1em;
  border: 2px solid #c9c9c9;
  margin: 3em!important;
  /*margin: .9em;
  width: 60px;
  height: 60px;

  border: 2px solid #c9c9c9;
  @include circle(60px, 60px, none);

  @include breakpoint(md) {
     margin-top: 0.5em;
     margin-bottom: 0.5em;
  }
  */

  @include breakpoint(md) {
    padding: 2.1em;
    border: 1px solid #fff;
    margin: 15px;
  }

}

