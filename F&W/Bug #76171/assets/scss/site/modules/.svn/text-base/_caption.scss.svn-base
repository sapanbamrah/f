.caption {
  font-size: pxtoem($caption-font-size);
  $captionColour: $captionColour;
}
.caption-header {
  display: block;
  font-family: $caption-header-font-family;
  line-height: pxtolineheightem($caption-font-size, 22px);

}

.caption-body {
  font-family: $caption-body-font-family;
  line-height: pxtolineheightem($caption-font-size, 22px);
}

