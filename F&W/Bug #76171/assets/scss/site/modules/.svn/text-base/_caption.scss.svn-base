$caption-header-font-family: "ProximaNova Bold Italic", Helvetica, Arial, sans-serif !default;
$caption-font-size: 14px !default;
$caption-body-font-family: "ProximaNova Regular Italic", Helvetica, Arial, sans-serif !default;
$captionColour: #363333;

